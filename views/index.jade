        script(type="text/javascript" src="static/bower_components/d3/d3.min.js")
        script(type="text/javascript" src="static/bower_components/getmdl-select/getmdl-select.min.js")
        script(type="text/javascript" src="static/bower_components/material-design-lite/material.min.js")
        script(type="text/javascript" src="static/bower_components/nvd3/build/nv.d3.min.js")
        //angular
        script(type="text/javascript" src="static/js/angularApp.js")
        script(type="text/javascript" src="static/bower_components/angular-sanitize/angular-sanitize.min.js")
        script(type="text/javascript" src="static/bower_components/angular-animate/angular-animate.min.js")
        script(type="text/javascript" src="static/bower_components/ngToast/dist/ngToast.min.js")
        script(type="text/javascript" src="static/bower_components/socket.io-client/socket.io.js")
        script(type="text/javascript" src="static/bower_components/angular-route/angular-route.js")
        script(type="text/javascript" src="static/bower_components/mdl-selectfield/dist/mdl-selectfield.min.js")
