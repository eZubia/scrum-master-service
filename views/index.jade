doctype html
html(lang='en', xmlns='http://www.w3.org/1999/html' ng-app="app")
    head
        link(rel='icon', type='image/png', href='../src/images/group.png')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='A front-end template that helps you build fast, modern mobile web apps.')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Scrum Team
        // Add to homescreen for Chrome on Android
        meta(name='mobile-web-app-capable', content='yes')
        // Add to homescreen for Safari on iOS
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-status-bar-style', content='black')
        meta(name='apple-mobile-web-app-title', content='Scrum Team')
        // Tile icon for Win8 (144x144 + tile color)
        meta(name='msapplication-TileImage', content='images/touch/ms-touch-icon-144x144-precomposed.png')
        meta(name='msapplication-TileColor', content='#3372DF')
        // SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones
        //
        link(href='https://fonts.googleapis.com/css?family=Roboto:400,500,300,100,700,900', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(href='static/css/application.css' rel='stylesheet' type="text/css")
        link(href='static/css/lib/getmdl-select.min.css' rel='stylesheet' type="text/css")
        link(href='static/css/lib/nv.d3.css' rel='stylesheet' type="text/css")
        link(type="text/css" src="static/bower_components/ngToast/dist/ngToast.min.css")
        //link(rel="stylesheet" href="static/bower_components/mdl-selectfield/dist/mdl-selectfield.min.css" )
        link(href='static/css/styles.css' rel='stylesheet' type="text/css")
        link(href='static/css/landing.css' rel='stylesheet' type="text/css")

        include mixins.jade
    body
        block landing
        .mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header.is-small-screen
            header.mdl-layout__header
                .mdl-layout__header-row
                    .mdl-layout-spacer
                    #notification.material-icons.mdl-badge.mdl-badge--overlap.mdl-button--icon.notification(data-badge='23')
                        | notifications_none
                    ul.mdl-menu.mdl-list.mdl-js-menu.mdl-js-ripple-effect.mdl-menu--bottom-right.mdl-shadow--2dp.notifications-dropdown(for='notification')
                        li.mdl-list__item
                            | You have {{70+90}} new notifications!
                        li.mdl-menu__item.mdl-list__item.list__item--border-top
                            span.mdl-list__item-primary-content
                                span.mdl-list__item-avatar.background-color--primary
                                    i.material-icons plus_one
                                span You have 3 new orders.
                            span.mdl-list__item-secondary-content
                                span.label just now
                        li.mdl-menu__item.mdl-list__item.list__item--border-top
                            span.mdl-list__item-primary-content
                                span.mdl-list__item-avatar.background-color--secondary
                                    i.material-icons error_outline
                                span Database error
                            span.mdl-list__item-secondary-content
                                span.label 1 min
                        li.mdl-menu__item.mdl-list__item.list__item--border-top
                            span.mdl-list__item-primary-content
                                span.mdl-list__item-avatar.background-color--primary
                                    i.material-icons new_releases
                                span The Death Star is built!
                            span.mdl-list__item-secondary-content
                                span.label 2 hours
                        li.mdl-menu__item.mdl-list__item.list__item--border-top
                            span.mdl-list__item-primary-content
                                span.mdl-list__item-avatar.background-color--primary
                                    i.material-icons mail_outline
                                span You have 4 new mails.
                            span.mdl-list__item-secondary-content
                                span.label 5 days
                        li.mdl-list__item.list__item--border-top
                            button.mdl-button.mdl-js-button.mdl-js-ripple-effect(href='#') ALL NOTIFICATIONS
                    #icon.avatar-dropdown
                        span #{user.nombreCompleto}
                        img(src='static/images/Icon_header.png')
                    ul.mdl-menu.mdl-list.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect.mdl-shadow--2dp.account-dropdown(for='icon')
                        li.mdl-list__item.mdl-list__item--two-line
                            span.mdl-list__item-primary-content
                                span.material-icons.mdl-list__item-avatar
                                span #{user.nombreCompleto}
                                span.mdl-list__item-sub-title #{user.email}
                        li.list__item--border-top
                        li.mdl-menu__item.mdl-list__item
                            span.mdl-list__item-primary-content
                                i.material-icons.mdl-list__item-icon account_circle
                                a(href="/profile") Mi perfil
                        li.mdl-menu__item.mdl-list__item
                            span.mdl-list__item-primary-content
                                i.material-icons.mdl-list__item-icon check_box
                                |                         My tasks
                            span.mdl-list__item-secondary-content
                                span.label.background-color--primary 3 new
                        li.mdl-menu__item.mdl-list__item
                            span.mdl-list__item-primary-content
                                i.material-icons.mdl-list__item-icon perm_contact_calendar
                                |                         My events
                        li.list__item--border-top
                        li.mdl-menu__item.mdl-list__item
                            span.mdl-list__item-primary-content
                                i.material-icons.mdl-list__item-icon settings
                                |                         Settings
                        li.mdl-menu__item.mdl-list__item
                            span.mdl-list__item-primary-content
                                i.material-icons.mdl-list__item-icon.text-color--secondary exit_to_app
                                a(href="/logout") Log out
            .mdl-layout__drawer
                header scrum team
                nav.mdl-navigation
                    a.mdl-navigation__link.mdl-navigation__link--current(href='/home')
                        i.material-icons(role='presentation') dashboard
                        |                 Dashboard
                    if rolActual
                      if proyecto
                        a.mdl-navigation__link(href='/detalleProyecto')
                            i.material-icons(role='presentation') description
                            |                 Detalle del Proyecto
                        if rolActual == 'developer'
                          a.mdl-navigation__link(href='/resumenHistoriasDesarrollador')
                              i.material-icons(role='presentation') archive
                              |                 Historias Desarrollador
                        if rolActual == 'product-owner'
                          a.mdl-navigation__link(href='/resumenHistoriasProductOwner')
                              i.material-icons(role='presentation') check circle
                              |                 Historias Product Owner
                    .mdl-layout-spacer
                    a.mdl-navigation__link(href='https://github.com/alexescg/p-draw')
                        i.material-icons(role='presentation') link
                        |                 GitHub
            main.mdl-layout__content(class="mdl-color--grey-100")
                block content
